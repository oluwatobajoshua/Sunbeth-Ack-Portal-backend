# Backend configuration
# Copy to .env and adjust values as needed

# Server
PORT=4000
NODE_ENV=development

# Database Configuration
# Choose database driver: 'sqlite' (default), 'firebase', 'libsql', or 'turso'
#DB_DRIVER=sqlite
DB_DRIVER=firebase

# SQLite Configuration (used when DB_DRIVER=sqlite)
DATA_DIR=./data
DB_PATH=./data/sunbeth.db

# Firebase Configuration (used when DB_DRIVER=firebase)
# Option 1: Use service account file path
FIREBASE_SERVICE_ACCOUNT_PATH=./serviceAccount.json
# Option 2: Use service account JSON directly (alternative to file path)
# FIREBASE_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"sunbeth-ack-portal",...}
# Firebase Project Configuration
FIREBASE_PROJECT_ID=sunbeth-ack-portal
# Note: For Firestore, DATABASE_URL is optional (only needed for Realtime Database)
# FIREBASE_DATABASE_URL=https://sunbeth-ack-portal-default-rtdb.firebaseio.com/

# libsql/turso Configuration (used when DB_DRIVER=libsql or DB_DRIVER=turso)
# LIBSQL_URL=libsql://[db-name]-[org].turso.io
# LIBSQL_AUTH_TOKEN=your-token

# Admin Users (comma-separated emails)
REACT_APP_ADMINS=admin@example.com
REACT_APP_MANAGERS=manager@example.com

# CORS and Security
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# External User Support
EXTERNAL_SUPPORT_ENABLED=1
FRONTEND_BASE_URL=http://localhost:3000
